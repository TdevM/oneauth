{{!< centercolumn}}
<div class="offset-md-4 col-md-8 c-add-address">
    <div class="card">
        <h1 class="heading-u-red">Add Address</h1>

        <form action="/api/address" method="POST">
            <input type="hidden" name="_csrf" value="{{csrfToken}}">
            <input type="hidden" name="returnTo" id="redirect-input" value="{{returnTo}}"/>

            {{> error-snippet}}

            <div class="attributes">
                <div class="row no-gutters align-items-center justify-content-between detail-row">
                    <div class="label-input col-md-4 col-sm-3">Label</div>
                    <input class="input-text col-md-8 col-sm-8" type="text" placeholder="Home, Office etc"
                           name="label"/>
                </div>
                <div class="row justify-content-between">

                    <div class="row no-gutters align-items-center justify-content-between detail-row">
                        <div class="label-input col-md-4 col-sm-3">First Name</div>
                        <input class="input-text col-md-8 col-sm-8" type="text" placeholder="First Name"
                               name="first_name" required/>
                    </div>

                    <div class="row no-gutters align-items-center justify-content-between detail-row">
                        <div class="label-input col-md-4 col-sm-3">Last Name</div>
                        <input class="input-text col-md-8 col-sm-8" type="text" placeholder="Last Name" name="last_name"
                               required/>
                    </div>
                </div>

                <div class="row justify-content-between">
                    <div class="row no-gutters align-items-center justify-content-between detail-row">
                        <div class="label-input col-md-4 col-sm-3">Mobile No.</div>
                        <input class="input-text col-md-8 col-sm-8" type="text" pattern="[0-9]{10}" maxlength="10"
                               placeholder="Mobile Number" name="number" required/>
                    </div>

                    <div class="row no-gutters align-items-center justify-content-between detail-row">
                        <div class="label-input col-md-4 col-sm-3">Email</div>
                        <input class="input-text col-md-8 col-sm-8" type="email" placeholder="E-mail" name="email"
                               required/>
                    </div>
                </div>

                <div class="row justify-content-between">
                    <div class="row no-gutters align-items-center justify-content-between detail-row">
                        <div class="label-input col-md-4 col-sm-3">Address Line</div>
                        <input class="input-text col-md-8 col-sm-8" type="text" placeholder="Street Address"
                               name="street_address" required/>
                    </div>

                    <div class="row no-gutters align-items-center justify-content-between detail-row">
                        <div class="label-input col-md-4 col-sm-3">Landmark</div>
                        <input class="input-text col-md-8 col-sm-8" type="text" placeholder="Landmark" name="landmark"
                               required/>
                    </div>
                </div>

                <div class="row justify-content-between">
                    <div class="row no-gutters align-items-center justify-content-between detail-row">
                        <div class="label-input col-md-4 col-sm-3">Pincode</div>
                        <input class="input-text col-md-8 col-sm-8" type="text" pattern="[0-9]{6}" maxlength="6"
                               name="pincode" placeholder="Pin Code" required/>
                    </div>

                    <div class="row no-gutters align-items-center justify-content-between detail-row">
                        <div class="label-input col-md-4 col-sm-3">City</div>
                        <input class="input-text col-md-8 col-sm-8" type="text" placeholder="City" name="city"
                               required/>
                    </div>
                </div>

                <div class="row justify-content-between">

                    <div class="row no-gutters align-items-center justify-content-between detail-row">
                        <div class="label-input col-md-4 col-sm-3">Country</div>
                        <select id="country-option" name="countryId" required class="input-text col-md-8 col-sm-8">
                            {{#each countries}}
                                <option class="dropdown-li" value="{{id}}"
                                        {{#selected}}selected="selected"{{/selected}}>{{name}}</option>
                            {{/each}}
                        </select>
                    </div>

                    <div class="row no-gutters align-items-center justify-content-between detail-row">
                        <div class="label-input col-md-4 col-sm-3">State</div>

                        <select id="state-option" name="stateId" class="input-text col-md-8 col-sm-8">

                        </select>
                    </div>



                    <div class="row no-gutters align-items-center justify-content-between detail-row">
                        <div class="label-input col-md-4 col-sm-3">Country Code</div>
                        <select name="dial_code" required class="input-text col-md-8 col-sm-8">
                            {{#each countries}}
                                <option class="dropdown-li" value="{{dial_code}}"
                                        {{#selected}}selected="selected"{{/selected}}>
                                    {{name}} ({{dial_code}})
                                </option>
                            {{/each}}
                        </select>
                    </div>

                    <div class="row no-gutters align-items-center justify-content-between detail-row">
                        <div class="label-input col-md-4 col-sm-3">Whatsapp No.</div>
                        <input class="input-text col-md-8 col-sm-8" type="text" placeholder="Whatsapp Number"
                               name="whatsapp_number"/>

                    </div>
                    <div class="row no-gutters align-items-center detail-row">
                        <label><input type="checkbox" class="input-checkbox" id="cb-whatsapp-toggle">Same as Mobile No.</label>
                    </div>
                </div>
            </div>

            <div class="row justify-content-end">
                <div class="grey reset-button">
                    <button type="reset">RESET</button>
                </div>

                <div class="button-solid">
                    <button type="submit">SAVE CHANGES</button>
                </div>
            </div>


        </form>
    </div>
</div>


<script>
    $(function () {
        let params = (new URL(document.location)).searchParams;
        let url = params.get('returnTo')
        $('#redirect-input').val(url)

        let mobile_number = $("input[name=number]");
        let whatsapp_number = $('input[name=whatsapp_number]');
        let whatsapp_toggle = $('#cb-whatsapp-toggle')
        let state_option = $('#state-option')
        let country_option = $('#country-option')

        whatsapp_toggle.change(function () {
            if ($(this).is(':checked')) {
                whatsapp_number.val(mobile_number.val());
                $(whatsapp_number).prop('disabled', true);
            } else {
                $('input[name=whatsapp_number]').val('');
                $(whatsapp_number).prop('disabled', false);
            }
        });

        country_option.on('change', function (e) {

            $.get(`/api/countries/${this.value}/states`, function(response) {

                if(typeof response =='object'){
                    state_option.empty();
                    $.each(response, function(key, value) {
                        state_option.append($("<option></option>")
                                .attr("value",value.id)
                                .attr("class","dropdown-li")
                                .text(value.name));
                    });
                }else {
                    state_option.empty();
                }

            });


        });

        $('form').submit(function () {
            $(whatsapp_number).prop('disabled', false);
        })
    })
</script>
